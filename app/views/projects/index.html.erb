<h1>顧客一覧</h1>

<section>
  <%= link_to '新規案件登録', new_project_path, class: 'btn btn-lg btn-primary' %>
</section>

<hr />

<section>
  <% if @projects.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>顧客番号</th>
            <th>顧客名</th>
            <th>建築地住所</th>
            <th>現固定電話</th>
            <th>発注書数</th>
            <th>契約日</th>
            <th>引渡日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.id %></td>
            <td><%= project.code %></td>
            <td><%= link_to project.name + ' 邸', project_path(project) %></td>
            <td><%= project.adress %></td>
            <td><%= project.current_phone %></td>
            <td><%= project.orders.count %></td>
            <td><%= project.contract_date %></td>
            <td><%= project.finish_date %></td>
            <td>
              <%= link_to '発注管理', orders_project_path(project.id), class: 'btn btn-success' %>
              <%= link_to '詳細', project_path(project), class: 'btn btn-secondary' %>
              <%= link_to '編集', edit_project_path(project), class: 'btn btn-warning' %>
              <%= link_to '削除', project, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</section>
