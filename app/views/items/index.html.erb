<h1>部材一覧</h1>

<section>
  <% if @items.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>単価</th>
            <th>発注単位</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.unit %></td>
            <td><%= link_to '削除', item, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-link' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</section>

<section>
  <%= link_to '新規部材登録', new_item_path, class: 'btn btn-lg btn-primary' %>
  <%= link_to 'カテゴリー管理', item_categories_path, class: 'btn btn-lg btn-success' %>
</section>