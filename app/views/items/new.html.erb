<h1>新規部材登録</h1>
<section>
  <%= form_for(@item) do |f| %>
  
    <div class="form-group">
      <%= f.label :item_category_id, 'カテゴリー' %>
      <%= f.collection_select(:item_category_id, ItemCategory.all, :id, :name, { prompt: "未選択" }, { class: 'form-control' }) %>
    </div>
    
    <div class="form-group">
      <%= f.label :name, '部材名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :price, '単価' %>
      <%= f.text_field :price, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :unit, '単位' %>
      <%= f.text_field :unit, class: 'form-control' %>
    </div>
    
    <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
  <% end %>
</section>