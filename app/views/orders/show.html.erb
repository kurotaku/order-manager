<h1><span style="color: red;"><%= '[発注済み]' if !!@order.done %></span><%= @order.name %> | <%= @order.project.name %>の発注書の詳細</h1>
<section>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">項目</th>
        <th scope="col">内容</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">id</th>
        <td><%= @order.id %></td>
      </tr>
      <tr>
        <th scope="row">発注名称</th></th>
        <td><%= @order.name %></td>
      </tr>
      <tr>
        <th scope="row">担当</th></th>
        <td><%= @order.staff %></td>
      </tr>
      <tr>
        <th scope="row">作成日</th>
        <td><%= @order.document_date %></td>
      </tr>
      <tr>
        <th scope="row">発注先</th>
        <td><%= @order.partner.name %></td>
      </tr>
      <tr>
        <th scope="row">発注合計</th>
        <td><%= calc_total(@order).to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th scope="row">支払い合計</th>
        <td><%= calc_paid_total(@order).to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th scope="row">備考欄</th>
        <td><%= @order.remark %></td>
      </tr>
    </tbody>
  </table>
</section>

<section>
  <h2>明細</h2>
  <% if @order.line_items.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>単価</th>
            <th>数量</th>
            <th>発注単位</th>
            <th>小計</th>
            <th>納期</th>
            <th>備考</th>
            <th>支払い金額</th>
          </tr>
        </thead>
        <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td><%= line_item.id %></td>
            <td><%= line_item.item.name %></td>
            <td><%= line_item.item.price.to_s(:delimited) %>円</td>
            <td><%= line_item.quantity %></td>
            <td><%= line_item.item.unit %></td>
            <td><%= calc_sub_total(line_item).to_s(:delimited) %>円</td>
            <td><%= line_item.delivery_date %></td>
            <td><%= line_item.remark %></td>
            <td><%= line_item.paid.to_s(:delimited) %>円
          </tr>
        <% end %>
      </table>
    </div>
  <% else %>
  <p>明細はありません</p>
  <% end %>
</section>

<section>
  <%= link_to 'この顧客の発注管理へ', orders_project_path(id: @order.project_id), class: 'btn btn-lg btn-secondary' %>
  <%= link_to '編集', edit_order_path(@order), class: 'btn btn-lg btn-warning' %>
  <%= link_to '削除', @order, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-lg btn-danger' %>
  <%= link_to '複製', copy_order_path(@order), class: 'btn btn-lg btn-warning' %>
  <%= link_to 'PDF', request.path_info + '.pdf', class: 'btn btn-lg btn-info' %>
</section>