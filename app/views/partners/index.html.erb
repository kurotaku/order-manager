<h1>発注先一覧</h1>

<section>
  <% if @partners.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>発注先名</th>
            <th>担当者</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @partners.each do |partner| %>
          <tr>
            <td><%= partner.id %></td>
            <td><%= link_to partner.name, partner_path(partner) %></td>
            <td><%= partner.staff %></td>
            <td><%= link_to '詳細', partner_path(partner), class: 'btn btn-link' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</section>

<section>
  <%= link_to '新規発注先登録', new_partner_path, class: 'btn btn-lg btn-primary' %>
</section>