<% if line_items.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>チェックボックス</th>
            <th>ID</th>
            <th>名前</th>
            <% if current_page?(controller: 'projects', action: 'orders') %>
              <th>発注書名</th>
            <% end %>
            <th>単価</th>
            <th>数量</th>
            <th>発注単位</th>
            <th>小計</th>
            <th>納期</th>
            <th>備考</th>
            <th>支払い金額</th>
          </tr>
        </thead>
        <tbody>
          <%= form_tag({controller: :orders, action: :new}) do %>
            <% line_items.order('id desc').each do |line_item| %>
              <tr>
                <td><%= check_box_tag 'line_item_ids[]', line_item.id, checked = false, id: "line_item_#{line_item.id}" %>
                <td><%= line_item.id %></td>
                <td><%= line_item.item.name %></td>
                <% if current_page?(controller: 'projects', action: 'orders') %>
                  <td><%= line_item.order.name %></td>
                <% end %>
                <td><%= line_item.item.price.to_s(:delimited) %>円</td>
                <td><%= line_item.quantity %></td>
                <td><%= line_item.item.unit %></td>
                <td><%= calc_sub_total(line_item).to_s(:delimited) %>円</td>
                <td><%= line_item.delivery_date %></td>
                <td><%= line_item.remark %></td>
                <td><%= line_item.paid.to_s(:delimited) %>円
              </tr>
            <% end %>
            <%= submit_tag '登録する', class: 'btn btn-primary btn-block' %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
  <p>明細はありません</p>
  <% end %>