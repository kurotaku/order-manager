<h1><%= @user.name %>の詳細</h1>
<section>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">項目</th>
        <th scope="col">内容</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">id</th>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th scope="row">名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th scope="row">email</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th scope="row">root</th>
        <td><%= @user.root %></td>
      </tr>
      <tr>
        <th scope="row">admin</th>
        <td><%= @user.admin %></td>
      </tr>
    </tbody>
  </table>
</section>